{
    "name": "cli",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "yarn postcss && yarn compile",
        "compile": "tsc --noEmit",
        "postcss": "postcss src/**/*.module.css --no-map --dir src --base src --ext styles.ts",
        "run": "ts-node src/index.ts"
    },
    "devDependencies": {
        "postcss": "^7.0.35",
        "postcss-cli": "^7.1.2",
        "postcss-es-modules": "1.0.0",
        "css-es-modules": "^0.1.0",
        "typescript": "^4.1.3",
        "ts-node": "^9.1.1"
    }
}
