{
    "name": "postcss-es-modules-example-cli",
    "version": "1.0.0",
    "private": true,
    "description": "Example of usage postcss-es-modules with the postcss cli",
    "license": "MIT",
    "scripts": {
        "build": "yarn test",
        "start": "node -r postcss-node/register src/index.js",
        "test": "yarn start"
    },
    "devDependencies": {
        "postcss": "^7.0.35",
        "postcss-cli": "^7.1.2",
        "postcss-node": "1.1.0",
        "postcss-es-modules": "1.1.0"
    },
    "postcss": {
        "plugins": {
            "postcss-es-modules": {
                "inject": {
                    "moduleType": "cjs"
                }
            }
        }
    }
}
