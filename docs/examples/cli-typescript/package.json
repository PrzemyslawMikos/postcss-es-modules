{
    "name": "postcss-es-modules-example-cli-typescript",
    "version": "1.0.0",
    "private": true,
    "description": "Example of usage postcss-es-modules with the postcss cli",
    "license": "MIT",
    "scripts": {
        "build": "yarn postcss && yarn compile && yarn test",
        "compile": "tsc --noEmit",
        "postcss": "postcss src/**/*.css --no-map --dir src --base src --ext css-module.ts",
        "run": "yarn build && ts-node src/index.ts",
        "test": "ts-node src/index.ts"
    },
    "devDependencies": {
        "postcss": "^7.0.35",
        "postcss-cli": "^7.1.2",
        "postcss-es-modules": "1.0.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    },
    "postcss": {
        "plugins": {
            "postcss-es-modules": {
                "inject": {
                    "scriptType": "ts"
                }
            }
        }
    }
}
